<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup Condition="'$(Configuration)' == ''">
    <!-- If set to debug or release default to Lib -->
    <Configuration Condition="'$(MBConfiguration)' == 'Debug'">Debug_Lib</Configuration>
    <Configuration Condition="'$(MBConfiguration)' == 'Release'">Release_Lib</Configuration>
    <!-- If still not set and MBConfiguration is set, use it-->
    <Configuration Condition="'$(Configuration)' == '' And '$(MBConfiguration)' != ''">$(MBConfiguration)</Configuration>
    <!-- If STILL not set, debug Lib -->
    <Configuration Condition="'$(Configuration)' == ''">Debug_Lib</Configuration>
  </PropertyGroup>
</Project>